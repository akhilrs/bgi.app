<table>
	<thead>
		<th>Datetime</th>
		<th>Type</th>
		<th>Name</th>
		<th>Number</th>
		<th>Duration</th>
	</thead>
	<tbody>
		<% if @log == true %>
			<% @calllogs.each do |log| %>
				<tr>
					<td><%= log['datetime'].in_time_zone("Asia/Kolkata") %></td>
					<td><%= log['calltype'] %></td>
					<td><%= log['name'] %></td>
					<td><%= log['number'] %></td>
					<td><%= log['duration'].strftime("%H:%M:%S") %></td>
				</tr>
			<% end %>
		<% else %>
				<tr>
					<td colspan="5" style="text-align:center"> No call logs added! </td>
				</tr>
		<% end %>
	</tbody>
</table>	